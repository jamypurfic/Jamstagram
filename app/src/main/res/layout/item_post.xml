<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/cardview_light_background"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="20sp"
        tools:text="The username here" />

    <ImageView
        android:id="@+id/ivPost"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/tvUsername"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />


    <ImageButton
        android:id="@+id/icComment"
        android:layout_width="58dp"
        android:layout_height="53dp"
        android:layout_below="@+id/ivPost"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ffffff"
        android:src="@drawable/ic__725715_comment_add_icon"
        app:tint="#000000" />

    <ImageButton
        android:id="@+id/icSend"
        android:layout_width="55dp"
        android:layout_height="52dp"
        android:layout_below="@+id/ivPost"
        android:layout_marginStart="118dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#ffffff"
        android:src="@drawable/ic__30109_paper_plane_send_icon"
        app:tint="#000000" />


    <ImageButton
        android:id="@+id/icHeart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivPost"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/ic__643770_favorite_heart_like_likes_love_icon" />


    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        android:layout_below="@+id/icHeart"
        tools:text="The caption here" />

    </RelativeLayout>






